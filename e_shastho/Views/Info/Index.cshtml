@using e_shastho.Data
@model List<Advice>

@{
    ViewData["Title"] = "তথ্য তালিকা";
}

<div class="text-center">
    <h1>করোনা বিষয়ক তথ্য (বিদ্রঃ ওয়েব হতে প্রাপ্ত)</h1>
    <br />


    <table class="table table-hover">
        <thead>
            <tr>
                <th>শিরোনাম</th>
                <th>তথ্য সোর্স</th>
            </tr>
        </thead>
        @if (!Model.Any())
        {
            <tbody>
                <tr>
                    <td colspan="5">ডাটা পাওয়া যায় নি</td>
                </tr>
            </tbody>
        }
        else
        {
            <tbody>
                @foreach (Advice advice in Model)
                {
                    <tr>
                        <td><a href="@Url.RouteUrl("InfoDetails", new {advice.Id })">@advice.Title</a></td>
                        <td>@advice.AdvisorName</td>
                    </tr>
                }
            </tbody>
        }
    </table>
</div>

@section Scripts{

    <script>
        $(document).ready(function () {
            $(".table").DataTable();

            $(".dataTables_filter input").attr("placeholder", "সার্চ করুন");
        });
    </script>
}